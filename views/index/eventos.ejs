			let classes = [
				"text-white bg-secondary",
				"text-white bg-success",
				"bg-warning",
				"text-white bg-info",
				"bg-light"
			];
		%>
		<% for (let i = 0; i < eventos.length; i++) { %>

		<div class="col-md-4 locais">
			<div class="card shadow <%= classes[i % classes.length] %>">
				<img src="<%= eventos[i].imagem %>" class="card-img-top" alt="...">
				<div class="card-body">
					<h5 class="card-title">
						<%= eventos[i].nome %>
					</h5>

					<h6 class = "card-text">
						<%= eventos[i].lugar %>
						<p>
							<%= eventos[i].data %>
						</p>
					</h6>
					

				</div>
			</div>
		</div>

		<% } %>

