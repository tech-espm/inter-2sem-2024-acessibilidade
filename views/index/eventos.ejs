				},
				{
					imagem: "/public/img/casaluce3.png",
					nome: "Festa Italiana de Casaluce",
					lugar: "São Paulo - SP",
					data: "27/04/2024 a 26/05/2024"
				},
				{
					imagem: "/public/img/oktoberfest.webp",
					nome: "Oktoberfest 2024",
					lugar: "São Paulo - SP",
					data: "10/10/2024 a 13/10/2024 e 17/10/2024 a 20/10/2024"
				},
				{
					imagem : "/public/img/lollapalooza.webp",
					nome: "Festival de música Lollapalooza",
					lugar: "São Paulo - SP",
					data: "28,26 e 30/03/2025"

				},
				{
					imagem: "/public/img/bgs.webp",
					nome: "Brasil Game Show (BGS)",
					lugar: "São Paulo - SP",
					data: "9/10/2024 a 13/10/2024"
				},
				{
					imagem: "/public/img/ccxp.jpg",
